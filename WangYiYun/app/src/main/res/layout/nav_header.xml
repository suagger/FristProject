<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="50dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/head"/>
    <TextView
        android:id="@+id/mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:textSize="15sp"
        android:layout_below="@+id/icon_image"
        android:text="陆冬青"
        />

    <Button
        android:id="@+id/qiandao"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/style"
        android:layout_below="@id/icon_image"
        android:drawableLeft="@drawable/qiandao"
        android:text="签到"
        android:textColor="#fff"
        />

    <Button
        android:id="@+id/nav_vip"
        android:layout_marginTop="30dp"
        android:layout_below="@id/qiandao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style1"
        android:textColor="#fff"
        android:text="黑胶新客首月5元"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/nav_vip">


        <Button
            android:id="@+id/mes"
            android:layout_width="0dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的消息"
            android:textSize="10sp"
            android:drawableTop="@drawable/xiaoxi"
            style="?android:attr/borderlessButtonStyle"
            />


        <Button
            android:id="@+id/friends"
            android:layout_width="0dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/friend"
            android:text="我的好友"
            android:textSize="10sp"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/listen"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:drawableTop="@drawable/song"
            android:text="听歌识曲" />

        <Button
            android:id="@+id/fit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/yi"
            android:text="个性装扮"
            android:textSize="10sp"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>


</RelativeLayout>